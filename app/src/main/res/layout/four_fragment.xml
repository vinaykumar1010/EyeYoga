<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Setting.FourFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:lines="1"
        android:text="GENERAL SETTING"
        android:textColor="@color/dodger_blue"
        android:textSize="22dp"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/set_time_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:lines="1"
        android:text="Set Time"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:theme="@style/ClickableView"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/remainder_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:lines="1"
        android:text="Reminder"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:theme="@style/ClickableView"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:lines="1"
        android:text="SUPPORT US"
        android:textColor="@color/dodger_blue"
        android:textSize="22dp"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/share_with_friends_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:lines="1"
        android:text="Share With friends"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:theme="@style/ClickableView"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/rate_us_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:lines="1"
        android:text="Rate us"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:theme="@style/ClickableView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/feedback_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:lines="1"
        android:text="Feedback"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:theme="@style/ClickableView"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/about_us_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:lines="1"
        android:text="About Us"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:theme="@style/ClickableView"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BEBEBE" />

    <TextView
        android:id="@+id/privacy_policy_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:drawableLeft="@drawable/privacy_policy_png"
        android:drawablePadding="20dp"
        android:lines="1"
        android:text="Privacy policy"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:theme="@style/ClickableView"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"/>


</LinearLayout>